<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="test_view_form" model="ir.ui.view">
        <field name="name">test_form</field>
        <field name="model">test</field>
        <field name="arch" type="xml">
            <form string="Titre">
                <sheet>
                    <group>
                        <field name="date" />
                    </group>
                    <group>
                        <field name="name" />
                    </group>
                    <group>
                        <field name="texte" />
                    </group>
                    <group>
                        <field name="valide" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="test_view_tree" model="ir.ui.view">
        <field name="name">test_tree</field>
        <field name="model">test</field>
        <field name="arch" type="xml">
            <tree>
                <field name="date" />
                <field name="name" />
                <field name="texte" />
                <field name="valide" />
            </tree>
        </field>
    </record>

    <act_window
        id="test_test_action_view_action_window"
        name="test_action_view"
        res_model="test"
        view_mode="list,form"
    />
</odoo>
